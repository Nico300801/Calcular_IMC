<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Boton_calcular"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Altura"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginBottom="40dp"
        android:text="Altura"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ET_altura"
        tools:layout_editor_absoluteX="36dp" />

    <EditText
        android:id="@+id/ET_altura"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/Altura"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/Peso"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_marginBottom="40dp"
        android:text="Peso"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ET_peso"
        tools:layout_editor_absoluteX="36dp" />

    <EditText
        android:id="@+id/ET_peso"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="@string/Peso"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:onClick="Calcular_IMC"
        android:text="@string/botonIMC"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="413dp" />

    <TextView
        android:id="@+id/IMC"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="518dp" />
</androidx.constraintlayout.widget.ConstraintLayout>